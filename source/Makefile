





PROGRAM_BINARY              = main.exe
PROGRAM_MAIN_FILE_NAME      = main.cpp
PROGRAM_MAIN_FOLDER_INCLUDE = .

main.exe: $(PROGRAM_MAIN_FILE_NAME)
	g++ --std=c++11 $(PROGRAM_MAIN_FILE_NAME) -I $(PROGRAM_MAIN_FOLDER_INCLUDE) -o main



CATCH_DRIVER_CLASS_TESTS_FILE  = unit_tests/catch_tests
CATCH_DRIVER_CLASS_SOURCE_NAME = unit_tests/catch_main

catch_tests: $(CATCH_DRIVER_CLASS_SOURCE_NAME).o
	g++ --std=c++11 $(CATCH_DRIVER_CLASS_SOURCE_NAME).o $(CATCH_DRIVER_CLASS_TESTS_FILE).cpp -I $(PROGRAM_MAIN_FOLDER_INCLUDE) -o main

$(CATCH_DRIVER_CLASS_SOURCE_NAME).o: $(CATCH_DRIVER_CLASS_SOURCE_NAME).cpp
	g++ $(CATCH_DRIVER_CLASS_SOURCE_NAME).cpp -I $(PROGRAM_MAIN_FOLDER_INCLUDE) -c -o $(CATCH_DRIVER_CLASS_SOURCE_NAME).o



DOCTEST_DRIVER_CLASS_TESTS_FILE  = unit_tests/doctest_tests
DOCTEST_DRIVER_CLASS_SOURCE_NAME = unit_tests/doctest_main

doctest_tests: $(DOCTEST_DRIVER_CLASS_SOURCE_NAME).o
	g++ --std=c++11 $(DOCTEST_DRIVER_CLASS_SOURCE_NAME).o $(DOCTEST_DRIVER_CLASS_TESTS_FILE).cpp -I $(PROGRAM_MAIN_FOLDER_INCLUDE) -o main

$(DOCTEST_DRIVER_CLASS_SOURCE_NAME).o: $(DOCTEST_DRIVER_CLASS_SOURCE_NAME).cpp
	g++ $(DOCTEST_DRIVER_CLASS_SOURCE_NAME).cpp -I $(PROGRAM_MAIN_FOLDER_INCLUDE) -c -o $(DOCTEST_DRIVER_CLASS_SOURCE_NAME).o



clean:
	$(RM) $(PROGRAM_BINARY)



veryclean:
	$(RM) $(CATCH_DRIVER_CLASS_SOURCE_NAME).o
	$(RM) $(DOCTEST_DRIVER_CLASS_SOURCE_NAME).o
	$(RM) $(PROGRAM_BINARY)


